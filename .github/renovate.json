{
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "github-actions",
    "regex"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    }
  ],
  "regexManagers": [
    {
      "managerFilePatterns": [
        ".github/scripts/build-image.sh"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s.+_VERSION=\"(?<currentValue>.*)\""
      ]
    }
  ]
}
